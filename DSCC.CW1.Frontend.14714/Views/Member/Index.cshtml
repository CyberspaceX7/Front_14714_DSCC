@model IEnumerable<DSCC.CW1.Frontend._14714.Models.Member>

@{
    ViewBag.Title = "Members List";
}

<h2>Members List</h2>

<div class="mb-3">

    @Html.ActionLink("Create New Member", "Create", "Member", null, new { @class = "btn btn-primary" })&nbsp;

    @Html.ActionLink("Manage Membership Plans", "Index", "MembershipPlan", null, new { @class = "btn btn-secondary ml-2" })
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Join Date</th>
            <th>Plan Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.JoinDate.ToString("MM/dd/yyyy")</td>
                <td>@(ViewBag.PlanNames.ContainsKey(item.PlanId) ? ViewBag.PlanNames[item.PlanId] : "Unknown")</td>
                <td>
                    <div class="btn-group" role="group">
                        @Html.ActionLink("Edit", "Edit", new { id = item.MemberId }, new { @class = "btn btn-warning btn-sm" })
                        @Html.ActionLink("Details", "Details", new { id = item.MemberId }, new { @class = "btn btn-info btn-sm" })
                        @Html.ActionLink("Delete", "Delete", new { id = item.MemberId }, new { @class = "btn btn-danger btn-sm" })
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
